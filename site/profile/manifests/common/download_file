define profile::common::download_file(
    $site="undef",
    $cwd="undef",
    $creates="undef",
    $user="undef") {

    exec { $name:
      command => "/usr/bin/wget ${site}/${name}",
      cwd => $cwd,
      creates => "${cwd}/${name}",
      require => $require,
      user => $user,
      }
    }